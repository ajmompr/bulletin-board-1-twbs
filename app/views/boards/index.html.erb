<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card" style="width: 18rem;">
        <div class="card-header d-flex aling-items-center">
          <h1 class="h6">
            All boards
          </h1>
          <!-- Button trigger modal -->
          <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#addBoard">
            Add board
          </button>
        </div>
        <ul class="list-group list-group-flush">
          <% @list_of_boards.each do |a_board| %>
            <li class="list-group-item">
              <a href="/boards/<%= a_board.id %>">
                <%= a_board.name %>
              </a>
            </li>
          <% end %>
        </ul>

      </div>

      <hr>

      <div>
        <div>
          <h2>
            Add a new board
          </h2>

          <form action="/insert_board" method="post">
            <div>
              <label for="name_box">
                Name
              </label>

              <input type="text" id="name_box" name="query_name">
            </div>
            <div class="d-flex flex-row-reverse">
              <div class="p-2">
                

                <!-- Modal -->
                <div class="modal fade" id="addBoard" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        ...
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Add board</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
